@using Tarea_1.Models.ViewModels
@model ProyectoCorrecionViewModel

<h1>Crear proyecto de corrección</h1>

	

<div class="row">
	<div class="col-md-4">
		<form asp-action = "Create"> 
			<div asp-validation-summary="ModelOnly" class = "text-danger"></div>

			<div class="form-group">
				<label asp-for="Identificador" class= "control-label"> </label>
				<input asp-for="Identificador" class= "form-control"/> 
				<span asp-validation-for="Identificador" class = "text-danger"> </span>
			</div>
			<div class="form-group">
				<label asp-for="Error" class= "control-label"> </label>
				<input asp-for="Error" class= "form-control"/> 
				<span asp-validation-for="Error" class = "text-danger"> </span>
			</div>
			<div class="form-group">
				<label asp-for="Nombre" class= "control-label"> </label>
				<input asp-for="Nombre" class= "form-control"/> 
				<span asp-validation-for="Nombre" class = "text-danger"> </span>
			</div>
			<div class="form-group">
				<label asp-for="Descripcion" class= "control-label"> </label>
				<input asp-for="Descripcion" class= "form-control"/> 
				<span asp-validation-for="Descripcion" class = "text-danger"> </span>
			</div>	
			<div class="form-group">
				<label> Fecha inicio</label>
				<input class="form-control" label asp-for="FechaInicio"  asp-format="{0:yyyy-MM-ddTHH:mm}" /> 
				<span asp-validation-for="FechaInicio" class = "text-danger"> </span>
			</div>
			<div class="form-group">
				<label> Fecha finalización</label>
				<input class="form-control" label asp-for="FechaFinalización"  asp-format="{0:yyyy-MM-ddTHH:mm}" /> 
				<span asp-validation-for="FechaFinalización" class = "text-danger"> </span>
			</div>
			<div class="form-group">
				<label>Esfuerzo estimado</label>
				<input asp-for="EsfuerzoEstimado" class= "form-control"/> 
				<span asp-validation-for="EsfuerzoEstimado" class = "text-danger"> </span>
			</div>
			<div class="form-group">
				<label>Esfuerzo real</label>
				<input asp-for="EsfuerzoReal" class= "form-control"/> 
				<span asp-validation-for="EsfuerzoReal" class = "text-danger"> </span>
			</div>	
			<p>

			</p>
			<div class="form-group" > 
				<input type="submit" value="Crear" class= "btn btn-primary"></input>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
