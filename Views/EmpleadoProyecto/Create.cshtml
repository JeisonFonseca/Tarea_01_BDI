@using Tarea_1.Models.ViewModels
@model EmpleadoProyectoViewModel

<h1>Asociar empleado-proyecto</h1>

<div class="row">
	<div class="col-md-4">
		<form asp-action = "Create"> 
			<div asp-validation-summary="ModelOnly" class = "text-danger"></div>

			<div class="form-group">
				<label>Cédula del empleado</label>
				<input asp-for="CedulaEmpleado" class= "form-control"/> 
				<span asp-validation-for="CedulaEmpleado" class = "text-danger"> </span>
			</div>
			<div class="form-group">
				<label>Número del proyecto</label>
				<input asp-for="NumeroProyecto" class= "form-control"/> 
				<span asp-validation-for="NumeroProyecto" class = "text-danger"> </span>
			</div>
			<div class="form-group">
				<label asp-for="Horas" class= "control-label"> </label>
				<input asp-for="Horas" class= "form-control"/> 
				<span asp-validation-for="Horas" class = "text-danger"> </span>
			</div>

			<p>

			</p>
			<div class="form-group" > 
				<input type="submit" value="Crear" class= "btn btn-primary"></input>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}